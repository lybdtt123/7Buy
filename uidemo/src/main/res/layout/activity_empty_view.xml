<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoniu.zzx.uidemo.activity.EmptyViewActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btTwo"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="Two"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomLeft="10dp"
            app:qmui_radiusTopLeft="10dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btOne"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="One"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btLoad"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="Load"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btOneC"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="OneC"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btTwoC"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="TwoC"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomRight="10dp"
            app:qmui_radiusTopRight="10dp" />


    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/mEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:qmui_title_text="Title">

    </com.qmuiteam.qmui.widget.QMUIEmptyView>
</LinearLayout>
