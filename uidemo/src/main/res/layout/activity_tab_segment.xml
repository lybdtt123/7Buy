<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoniu.zzx.uidemo.activity.TabSegmentActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt0"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="文字"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomLeft="10dp"
            app:qmui_radiusTopLeft="10dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt1"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="文+底"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt2"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="文+顶"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt3"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="文+Ind"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt4"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="文+Icon"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomRight="10dp"
            app:qmui_radiusTopRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt5"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="Red"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomLeft="10dp"
            app:qmui_radiusTopLeft="10dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt6"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="换+Icon"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt7"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="不同"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt8"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="index+T"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_isRadiusAdjustBounds="false" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt9"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:text="index+T"
            android:textColor="@color/qmui_config_color_black"
            app:qmui_radiusBottomRight="10dp"
            app:qmui_radiusTopRight="10dp" />

    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUITabSegment
        android:id="@+id/mTabSegment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
