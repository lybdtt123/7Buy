<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />

    <com.haoniu.zzx.app_ts.view.MyRecyclerView
        android:id="@+id/my_rc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />


    <LinearLayout
        android:id="@+id/llayout_tag1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_content1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/failure_image" />

        <ImageView
            android:id="@+id/img_content2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2.5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/failure_image" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_tag3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="235dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_comment1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/failure_image" />

            <ImageView
                android:id="@+id/img_comment2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/failure_image" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="235dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_comment3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/failure_image" />

            <ImageView
                android:id="@+id/img_comment4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/failure_image" />

            <ImageView
                android:id="@+id/img_comment5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/failure_image" />

        </LinearLayout>
    </LinearLayout>

    <com.haoniu.zzx.app_ts.view.MyRecyclerView
        android:id="@+id/my_rc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:id="@+id/llayout_tag2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/img_content3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/failure_image" />

        <ImageView
            android:id="@+id/img_content4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/failure_image" />

    </LinearLayout>

</LinearLayout>
