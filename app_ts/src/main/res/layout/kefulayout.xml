<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/kefu"
        android:layout_width="@dimen/dp_40"
        android:layout_height="40dp"
        android:src="@mipmap/img_kefu"/>
    <TextView
        android:id="@+id/contentSize"
        android:layout_width="@dimen/icon_size_20dp"
        android:layout_height="@dimen/icon_size_20dp"
        android:text="1"
        android:background="@drawable/text_cornor"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/kefu"/>

</RelativeLayout>